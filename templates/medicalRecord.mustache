    </table>
  </section>
  <section>
    <h2>VACCINATIONS</h2>
    <table class="tg">
      <tr>
        <th class="tg-yw4l">Name</th>
        <th class="tg-yw4l">Date</th>
        <th class="tg-yw4l">Name</th>
        <th class="tg-yw4l">Date</th>
      </tr>
      <tr>
        <td class="tg-yw4l">Tetanus</td>
        <td class="tg-yw4l"></td>
        <td class="tg-yw4l">Meningitis</td>
        <td class="tg-yw4l"></td>
      </tr>
      <tr>
        <td class="tg-yw4l">Influenza</td>
        <td class="tg-yw4l"></td>
